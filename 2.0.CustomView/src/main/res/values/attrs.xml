<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SpeedometerView">
        <attr name="speedometerHandColor" format="color"/>
        <attr name="degreeTextColor" format="color"/>
        <attr name="borderColor" format="color"/>
        <attr name="degreeTextSize" format="dimension"/>
        <attr name="backgroundColor" format="color"/>
    </declare-styleable>


    <style name="SpeedometerViewStyle">
        <item name="speedometerHandColor">?colorPrimaryDark</item>
        <item name="degreeTextColor">?colorPrimaryDark</item>
        <item name="borderColor">?colorPrimaryDark</item>
        <item name="degreeTextSize">?android:textSize</item>
        <item name="backgroundColor">?colorAccent</item>
    </style>
</resources>