<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_background_gradient">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name_contacts_item"
            style="@style/contactItemTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:text="Full Name" />

        <RelativeLayout
            android:id="@+id/phone_1_group_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_contacts_item">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/phone_1_title_contacts_item"
                style="@style/contactItemTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/phone_1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/phone_1_contacts_item"
                style="@style/phoneNumbersStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/phone_1_title_contacts_item"
                tools:text="+78002000600" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/phone_2_group_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_1_group_item">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/phone_2_title_contacts_item"
                style="@style/contactItemTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/phone_2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/phone_2_contacts_item"
                style="@style/phoneNumbersStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/phone_2_title_contacts_item"
                tools:text="+78002000600" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/phone_3_group_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_2_group_item">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/phone_3_title_contacts_item"
                style="@style/contactItemTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/phone_3" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/phone_3_contacts_item"
                style="@style/phoneNumbersStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/phone_3_title_contacts_item"
                tools:text="+78002000600" />
        </RelativeLayout>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>